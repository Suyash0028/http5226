@model EventCateringManagementSystem.Models.MenuDto
@{
    ViewBag.Title = "DeleteConfirm";
}
<div class="modal-dialog m-5 card m-3 shadow p-3 bg-white rounded" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">@Model.MenuTitle</h5>
            <a class="close" data-dismiss="modal" aria-label="Close" href="/Menu/List"> <span aria-hidden="true">&times;</span></a>
        </div>
        <div class="modal-body">
            Are you sure you want to delete this menu?
        </div>
        <div class="modal-footer">
            <a class="btn btn-secondary" href="/Menu/List">Cancel</a>
            <form action="/Menu/Delete/@Model.MenuID" method="POST">
                <input class="btn btn-danger m-3" type="submit" value="Confirm Delete" />
            </form>
        </div>
    </div>
</div>

