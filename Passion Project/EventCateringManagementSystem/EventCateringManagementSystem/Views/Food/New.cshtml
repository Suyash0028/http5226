@model EventCateringManagementSystem.Models.FoodDto
@{
    ViewBag.Title = "New";
}

<a class="btn btn-primary mt-3 float-end" href="/Food/List">Back to list</a>
<h2 class="m-5">Create Food</h2>

<form action="/Food/Create" method="POST" class="m-5">
    <div class="mb-3">
        <label for="foodName" class="form-label">Food Name:</label>
        <input type="text" class="form-control" id="foodName" placeholder="Enter Food name" name="FoodName">
    </div>
    <div class="mb-3">
        <label for="foodDescription" class="form-label">Food Description:</label>
        <textarea class="form-control" id="foodDescription" rows="3" placeholder="Food Description" name="FoodDescription"></textarea>
    </div>
    <div class="mb-3">
        <label for="foodPrice" class="form-label">Food Price:</label>
        <input type="number" class="form-control" placeholder="Food Price" id="foodPrice" min="0" step="0.01" name="FoodPrice">
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-primary mb-3" value="Add Food">
    </div>
</form>

