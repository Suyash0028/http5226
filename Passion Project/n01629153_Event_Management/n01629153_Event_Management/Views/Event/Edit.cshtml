@model n01629153_Event_Management.Models.EventDto
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Event</h2>

<a class="btn btn-primary mt-3 float-end" href="/Event/List">Back to list</a>
<form action="/Event/Update/@Model.EventId" method="POST" class="mt-3">
    <div style="display:none;">
        @* Pass through the animal ID *@
        <input type="text" name="EventId" value="@Model.EventId" />
    </div>
    <div class="mb-3">
        <label for="eventName" class="form-label">Event Name:</label>
        <input type="text" class="form-control" id="eventName" placeholder="Enter event name" name="EventName" value="@Model.EventName">
    </div>
    <div class="mb-3">
        <label for="eventDescription" class="form-label">Event Description:</label>
        <textarea class="form-control" id="eventDescription" rows="3" name="EventDescription">@Model.EventDescription</textarea>
    </div>
    <div class="mb-3">
        <label for="eventDate" class="form-label">Event Date:</label>
        <div>@Html.TextBoxFor(model => model.EventDate, new { @type = "date", @Value = Model.EventDate.ToString("yyyy-MM-dd"), @class = "form-control" })</div>
        @*<input type="date" class="form-control" id="eventDate" name="EventDate" value="@Model.EventDate">*@
    </div>
    <div class="mb-3">
        <label for="eventLocation" class="form-label">Event Location:</label>
        <input type="text" class="form-control" id="eventLocation" placeholder="Enter event location" name="EventLocation" value="@Model.EventLocation">
    </div>
    <div class="mb-3">
        <label for="sponsorId" class="form-label">Sponsor:</label>
        <input type="number" class="form-control" id="sponsorId" name="SponsorId" value="@Model.SponsorId">
    </div>
    <div class="mb-3">
        <label for="userId" class="form-label">User:</label>
        <input type="number" class="form-control" id="userId" name="UserId" value="@Model.UserId">
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-primary mb-3" value="Update">
    </div>
</form>