@model n01629153_Event_Management.Models.ViewModel.NewEvent

@{
    ViewBag.Title = "New";
}

<h2>Create Event</h2>
<a class="btn btn-primary mt-3 float-end" href="/Event/List">Back to list</a>
<form action="/Event/Create" method="POST" class="mt-3">
    <div class="mb-3">
        <label for="eventName" class="form-label">Event Name:</label>
        <input type="text" class="form-control" id="eventName" placeholder="Enter event name" name="EventName">
    </div>
    <div class="mb-3">
        <label for="eventDescription" class="form-label">Event Description:</label>
        <textarea class="form-control" id="eventDescription" rows="3" name="EventDescription"></textarea>
    </div>
    <div class="mb-3">
        <label for="eventDate" class="form-label">Event Date:</label>
        <input type="date" class="form-control" id="eventDate" name="EventDate">
    </div>
    <div class="mb-3">
        <label for="eventLocation" class="form-label">Event Location:</label>
        <input type="text" class="form-control" id="eventLocation" placeholder="Enter event location" name="EventLocation">
    </div>
    <div class="mb-3">
        <label for="sponsorId" class="form-label">Sponsored By:</label>
        <select class="form-select" name="SponsorId">
            <option selected disabled>---Select Sponsors---</option>
            @foreach (var sponsor in Model.SponsorOptions)
             {
                <option value="@sponsor.SponsorId">@sponsor.SponsorName</option>

             }
        </select>
    </div>
    <div class="mb-3">
        <label for="userId" class="form-label">Organized By:</label>
        <select class="form-select" name="UserId">
            <option selected disabled>---Select Sponsors---</option>
            @foreach (var user in Model.UserOptions)
             {
                <option value="@user.UserId">@user.UserName</option>
             }
        </select>
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-primary mb-3" value="Add Event">
    </div>
</form>